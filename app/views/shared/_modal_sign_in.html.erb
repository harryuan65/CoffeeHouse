<div data-controller="sign-in-modal" class="grid place-items-center fixed z-10 top-0 left-0 h-screen w-screen text-gray-700">
  <div data-action="click->sign-in-modal#closeModal" class="flex items-center justify-center w-screen h-screen bg-black opacity-60">
  </div>
  <div class="absolute top-1/2 -translate-y-1/2 grid grid-cols-1 grid-rows-[9rem,1fr,1fr] place-items-center bg-white m-auto border-1 round w-[36rem] h-[32rem]">
    <div class="logo p-4">
      <h1 class="text-accent text-center text-4xl font-bold">COFFYA</h1>
    </div>
    <div class="form flex flex-col justify-center items-center">
      <span class="my-4 text-md">使用 Coffya 帳號登入</span>
      <%= form_with(url: new_user_session_path, class: "w-80", data: { controller: "form" }) do |f| %>
        <div class="field">
          <%= f.email_field :email, data: {action: "input->form#updateEditing" }, required: true, placeholder: "Coffya 帳號", autofocus: true, autocomplete: "email", class: "w-full text-gray-500 outline-none py-2 px-4 border-solid border-[1px] border-gray-300 rounded-sm" %>
        </div>
        <div class="field">
          <%= f.password_field :password, data: {action: "input->form#updateEditing" }, required: true, placeholder: "密碼", autocomplete: "current-password", class: "mt-4 w-full text-gray-500 outline-none py-2 px-4 border-solid border-[1px] border-gray-300 rounded-sm" %>
        </div>
        <% if Devise.mappings[:user].rememberable? %>
          <div class="field float-right py-2">
            <%= f.check_box :remember_me %>
            <%= f.label "記住我" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "登入", data: { target: "form.submit" }, class: "disabled:opacity-50 disabled:cursor-not-allowed bg-gray-300 py-3 w-full cursor-pointer rounded-sm", disabled: "disabled" %>
        </div>
      <% end %>
    </div>
    <div>
      <p>還不是會員？<%= link_to "立即註冊", new_user_registration_path, class: "text-accent hover:text-primary" %></p>
    </div>
  </div>
</div>
