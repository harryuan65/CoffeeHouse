<% if notice %>
  <span class="notice animate-fade-in-out border-solid border-[1px] border-gray-300 p-2 text-center bg-flash text-success rounded-lg absolute left-1/2 -translate-x-1/2 top-8"><%= notice %></span>
<% end %>
<% if alert %>
  <span class="alert border-solid border-[1px] border-gray-300 p-2 text-center bg-flash text-alert rounded-lg absolute left-1/2 -translate-x-1/2 top-8"><%= alert %></span>
<% end %>
