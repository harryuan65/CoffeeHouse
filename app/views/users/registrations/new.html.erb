<main class="h-screen w-screen grid place-items-center">
  <div class="flex flex-col justify-center m-auto border-1 round" >
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%# NOTE: classes need to be reused as components %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-solid border-2 border-gray-500 rounded-md" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "border-solid border-2 border-gray-500 rounded-md" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border-solid border-2 border-gray-500 rounded-md" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "bg-gray-300 border-solid border-2 border-gray-500 rounded-md p-2" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</main>
