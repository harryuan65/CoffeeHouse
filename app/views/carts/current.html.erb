<%= turbo_stream_from "cart_items" %>
<div class="max-w-[70vw] m-auto h-screen py-5">
  <table class="text-gray-700 border-separate border-spacing-y-6">
    <thead>
      <tr>
        <th></th>
        <th class="font-normal text-sm">商品</th>
        <th class="font-normal text-sm">單價</th>
        <th class="font-normal text-sm">數量</th>
        <th class="font-normal text-sm">小計</th>
        <th class="min-w-[32px]"></th>
      </tr>
    </thead>
    <tbody id="cart_items">
      <% @items.each do |cart_item| %>
        <%= render partial: "cart_items/cart_item", locals: { cart_item: cart_item } %>
      <% end %>
    </tbody>
  </table>
  <hr class="border-gray-500 m-4">
</div>
