<%= turbo_stream_from "cart_items" %>
<table class="text-gray-700 border-separate border-spacing-y-6">
  <thead class="font-normal text-sm">
    <tr>
      <th class="min-w-[80px] w-[14%]"></th>
      <th class="w-[38%]"><%= t("views.orders.product") %></th>
      <th class="w-[15%]"><%= t("views.orders.price") %></th>
      <th class="w-[17%]"><%= t("views.orders.count") %></th>
      <th class="w-[15%]"><%= t("views.orders.total_price") %></th>
      <th class="min-w-[72px]"></th>
    </tr>
  </thead>
  <tbody id="cart_items">
    <% items.each do |cart_item| %>
      <%= render partial: "cart_items/cart_item", locals: { cart_item: cart_item, product: cart_item.product } %>
    <% end %>
  </tbody>
</table>
